<%- include('../partials/header') -%>


<section class="resume py-5 d-lg-flex justify-content-center align-items-center" id="resume">
    <div class="container">
        <div class="row">
          <% if (isAuthenticated) { %>
            <% if (user.adminRights == true) { %>
            <div class="col-lg-12 col-12">
                <h2 class="mb-4">Admin Section Only</h2>
            <h4>Remember To Log Out <%= user.userName %>!</h4>
            </div>



            <div class="col-lg-12 col-12">
                <div class="contact-form">
                  <h2 class="mb-4">Add A New About Section Here</h2>
      
                  <form action="/editstaff/<%= result[0].Name %>o/<%= result[0].Id %>" enctype="multipart/form-data" method="post">
                    <div class="row">
                      <div class="col-lg-6 col-12">
                        <input type="text" class="form-control"  value="<%= result[0].Name %>" name="name">
                      </div>
      
                      <div class="col-lg-6 col-12">
                        <input type="text" class="form-control"  value="<%= result[0].Name %>" name="bubble">
                      </div>

                      <div class="col-lg-12 col-12">
                        <input type="text" class="form-control"  value="<%= result[0].babyBit %>" name="babybit">
                      </div>

                      <% var desx = result[0].description 
                      var desfixed = desx.replaceAll("<br>" , "\n");
                      %>

                      <div class="col-12">
                        <textarea rows="6" class="form-control" name="description" ><%- desfixed %></textarea>
                      </div>

                            
                      <div class="col-lg-4 col-12">
                        <label>The Image Name</label>
                        <input class="form-control" name="Image" value="<%= result[0].Image %>">
                      </div>


                      <div class="col-lg-4 col-12">
                        <label>On Or Off for Home Page</label>
                          <select name="onshow" class="form-control" >
                            
                            <option value="notOnShow">Not On Home Page</option>
                            <option value="Show">On Home Page</option>
                            
                          </select>
                      </div>
                        
                      <div class="col-lg-4 col-12">
                      <label>Ranking Order On Staff Page</label>
                        <select name="mychoice" class="form-control" >
                          <option value="A">A</option>
                          <option value="B">B</option>
                          <option value="C">C</option>
                          <option value="D">D</option>
                          <option value="D">E</option>
                          <option value="D">F</option>
                          <option value="D">G</option>
                          <option value="D">H</option>
                          <option value="D">I</option>
                          <option value="D">J</option>
                          <option value="D">K</option>
                          <option value="D">L</option>
                          <option value="D">M</option>
                          <option value="D">N</option>
                          <option value="D">O</option>
                          <option value="D">P</option>
                          <option value="D">Q</option>
                          <option value="D">R</option>
                          <option value="D">S</option>
                          <option value="D">T</option>
                          <option value="D">U</option>
                          <option value="D">V</option>
                          <option value="D">W</option>
                          <option value="D">X</option>
                          <option value="D">Y</option>
                          <option value="D">Z</option>
                        </select>
                       
                      </div>
      
                      <div class="ml-lg-auto col-lg-5 col-12">
                        <input type="submit" class="form-control submit-btn" value="Send Button">
                      </div>
                    </div>
                  </form>
                </div>
              </div>

              <% } %>
              <%} else { %>
                <div class="col-lg-12 col-12">
                  <h2 class="mb-4">Admin Section Only</h2>
              <h4>You Shoule Not Be Looking Here!</h4>
              </div>

              <% } %>

        </div>
    </div>
</section>




<%- include('../partials/footer') -%>