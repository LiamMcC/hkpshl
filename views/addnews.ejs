<%- include('../partials/header') -%>


<section class="resume py-5 d-lg-flex justify-content-center align-items-center" id="resume">
    <div class="container">
        <div class="row">
          <% if (isAuthenticated) { %>
            <% if (user.adminRights == true) { %>
            <div class="col-lg-12 col-12">
                <h2 class="mb-4">Admin Section Only</h2>
            <h4>Remember To Log Out <%= user.userName %>!</h4>
            </div>



            <div class="col-lg-12 col-12">
                <div class="contact-form">
                  <h2 class="mb-4">Add A New About Section Here</h2>
      
                  <form action="/addnews" enctype="multipart/form-data" method="post">
                    <div class="row">
                      <div class="col-lg-6 col-12">
                        <input type="text" class="form-control"  placeholder="Title" name="title">
                      </div>
      
                      <div class="col-lg-6 col-12">
                        <input type="text" class="form-control"  placeholder="Image Title" name="imagetitle">
                      </div>


                      <div class="col-12">
                        <textarea rows="6" class="form-control" name="description" placeholder="Description"></textarea>
                      </div>

                            
                      <div class="col-lg-12 col-12">
                        <input type="file" class="form-control" name="image" accept='image/*' style="height:auto">
                        
                      </div>
      
                      <div class="ml-lg-auto col-lg-5 col-12">
                        <input type="submit" class="form-control submit-btn" value="Send Button">
                      </div>
                    </div>
                  </form>
                </div>
              </div>

              <% } %>
              <%} else { %>
                <div class="col-lg-12 col-12">
                  <h2 class="mb-4">Admin Section Only</h2>
              <h4>You Shoule Not Be Looking Here!</h4>
              </div>

              <% } %>

        </div>
    </div>
</section>




<%- include('../partials/footer') -%>