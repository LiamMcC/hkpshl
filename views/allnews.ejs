<%- include('../partials/header') -%>

<section class="resume py-5 d-lg-flex justify-content-center align-items-center" id="resume">
    <div class="container">
        <div class="row">
          <% if (isAuthenticated) { %>
            <% if (user.adminRights == true) { %>
            <div class="col-lg-12 col-12">
                <h2 class="mb-4">Admin Section Only</h2>
            <h4>Remember To Log Out <%= user.userName %>!</h4>
            </div>
        </div>
    </div>
</section>

<section>
    


    <div class="container">
        <h2>All Your News!</h2>
        <div class="table-responsive">          
        <table class="table">
          <thead>
            <tr>
                
              <th>Title</th>
              <th>On Home</th>
              <th>Edit</th>
              <th>View</th>
              <th>Delete</th>
            </tr>
          </thead>
          <tbody>
            <% result.forEach(function(product) { %>
            <tr>
              <td><%= product.Title %></td>
              <td><%= product.onShow %></td>
              
              <% var namex = product.Title 
              var namexfixed = namex.replace(/ /g , "-");
              %>
              <td><a href="/editnews/<%= namexfixed %>/<%= product.Id %>" class="btn custom-btn custom-btn-bg custom-btn-link">Edit</a>
              </td>
            
              <td><a href="/news/<%= namexfixed %>/<%= product.Id %>" class="btn custom-btn custom-btn-bg custom-btn-link">View</a>
              </td>

<!-- The Modal -->
<div id="myModal<%= product.Id %>" class="modal2">

  <!-- Modal content -->
  <div class="modal-content2">
    
    <h4>Are You Sure You Want To Do This!</h4>
    <div class="row justify-content-center" >
      <a href="#" style="background-color: green; margin-bottom: 10px;" id="goBack" class="btn custom-btn custom-btn-bg custom-btn-link">No Cancel</a>
    </div>
    <div class="row justify-content-center" id="bbbeee<%= product.Id %>" >
     
  </div>
  </div>

</div>






              <td><p class="btn custom-btn custom-btn-bg " id="myBtn<%= product.Id %>">Delete</p>
                <p id="yes<%= product.Id %>" style="display:none; position: fixed;top: 100px; left: 20%; width:60%; background-color: rgba(0, 0, 0, 0.7); padding:100px; border-radius: 10px;">
                  <span style="color:aliceblue">Are you sure?</span> <br><br>
                  <button style="background-color: green;" id="noCancel<%= product.Id %>" class="btn custom-btn custom-btn-bg custom-btn-link">No Cancel</button>
                  <br><br>
                  <a href="/deletenews/<%= product.Id %>" style="background-color: rgb(128, 0, 0);" class="btn custom-btn custom-btn-bg custom-btn-link">Yes Delete</a>
                             </p>
              </td>
              <script>
              $(document).ready(function(){
                $("#myBtn<%= product.Id %>").click(function(){
                  $("#yes<%= product.Id %>").slideToggle(2000);
                  
                  
                })


                $("#noCancel<%= product.Id %>").click(function(){
                  $("#yes<%= product.Id %>").slideUp(2000);
                 
                  
                })
                
              })
                </script>
              <% }); %>
            </tr>
          </tbody>
        </table>
        </div>
      </div>
      

      





      <section>
        <div class="container">
            <div class="row">
                <a href="/addnews" class="btn custom-btn custom-btn-bg custom-btn-link">Add New News</a>
            </div>
        </div>
      </section>
      
      <% } %>
      <%} else { %>
        <div class="col-lg-12 col-12">
          <h2 class="mb-4">Admin Section Only</h2>
      <h4>You Shoule Not Be Looking Here!</h4>
      </div>

      <% } %>


</section>

<%- include('../partials/footer') -%>